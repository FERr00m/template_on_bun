#service-block-please-delete-on-production
  style.
    @-webkit-keyframes rotate-center {
      0% {
        -webkit-transform: rotate(0);
        transform: rotate(0);
      }
      100% {
        -webkit-transform: rotate(360deg);
        transform: rotate(360deg);
      }
    }
    @keyframes rotate-center {
      0% {
        -webkit-transform: rotate(0);
        transform: rotate(0);
      }
      100% {
        -webkit-transform: rotate(360deg);
        transform: rotate(360deg);
      }
    }
    .service {
      position: fixed;
      left: 0rem;
      top: 4rem;
      font-size: 1rem;
      background-color: #ffc509e6;
      padding: 1rem;
      z-index: 999;
      transform: translateX(-100%);
      transition: all 0.2s ease-in-out;
    }
    .service.is-open {
      transform: translateX(0%);
    }
    body.modal-is-open .service {
      z-index: 0;
    }
    .service__btn {
      width: 2rem;
      height: 2rem;
      display: flex;
      position: absolute;
      align-items: center;
      right: -2rem;
      top: 0;
      border: 1px solid;
    }
    .service__icon {
      -webkit-animation: rotate-center 5s linear infinite both;
      animation: rotate-center 5s linear infinite both;
    }
  .service.js-service
    button.service__btn.js-service-btn
      svg.service__icon(width='20' height='20')
        use(xlink:href='#icon-cog')
        symbol#icon-cog(viewbox='0 0 32 32')
