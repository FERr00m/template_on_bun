    h2 Страницы
    ul
      each page in pages
        li
          +link(page.name, page.path)
    h2 Модалки
    ul
      each modal in modals
        li
          +link(modal.name, modal.path)
  script.
    window.addEventListener('load', function() {
      document.querySelector('.js-service-btn').addEventListener('click', ()=> {
        document.querySelector('.js-service').classList.toggle('is-open')
      })
    })
