mixin dummyImg(w=500, h=500, bg='000', color='fff', text='text', alt='dummy image')
  picture&attributes(attributes)
    source(type='image/webp' srcset='data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==' data-srcset=`https://dummyimage.com/${w}x${h}/${bg}/${color}&text=${text}`)
    img.lazy(src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src=`https://dummyimage.com/${w}x${h}/${bg}/${color}&text=${text}` width=`${w}`, height=`${h}` alt=`${alt}` loading="lazy")
