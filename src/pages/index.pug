extends ../layouts/pages-list

block main-content
  main.main.main--site-pages.pt-5
    .container
      h1.title.mb-5= site.title
    section.section

      .container
        +icon('icons8-vk')
        h2.title.mb-3 Страницы
        ul
          each page in pages
            li
              +link(page.name, page.path)
        h2.title.mb-3 Модалки
        ul
          each modal in modals
            li
              +link(modal.name, modal.path)
        h2.title.mb-3 Ui Kit
        ul
          li
            +link('Подробнее', '/uikit.html')
  script(type="module").
    import { neonCursor } from 'https://unpkg.com/threejs-toys@0.0.8/build/threejs-toys.module.cdn.min.js';

    neonCursor({
      el: document.querySelector('.main--site-pages'),
      shaderPoints: 16,
      curvePoints: 80,
      curveLerp: 0.5,
      radius1: 10,
      radius2: 30,
      velocityTreshold: 10,
      sleepRadiusX: 300,
      sleepRadiusY: 300,
      sleepTimeCoefX: 0.0025,
      sleepTimeCoefY: 0.0025,
    });
